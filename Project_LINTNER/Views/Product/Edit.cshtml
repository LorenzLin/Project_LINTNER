@{
    ViewData["Title"] = "Edit Product";
}
@model Product
<h1>Produkt ändern</h1>
<form asp-action="Edit">
    <input asp-for ="Id"type="hidden" />
    <div class= "mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" type="text"/>
            <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="price"></label>
        <input class="form-control" asp-for="price" type="number" />
        <span asp-validation-for="price"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Ändern"/>
    </div>
</form>